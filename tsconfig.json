{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2017",
		"outDir": "out",
		"lib": [
			"es2017"
		],
		"sourceMap": true,
		"alwaysStrict": true,
		"noUnusedLocals": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"rootDir": "src",
		"moduleResolution": "node"
	},
	"include": [
		"./src/**/*.ts",
		"./node_modules/vscode/vscode.d.ts",
		"./node_modules/vscode/lib/*"
	]
}